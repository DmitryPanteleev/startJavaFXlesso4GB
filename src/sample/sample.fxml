<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.shape.Circle?>
<?scenebuilder-stylesheet /css/Styles.css?>


<?import javafx.scene.control.PasswordField?>
<VBox fx:id="scene2" alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
      fx:controller="sample.Controller">
    <stylesheets>
        <URL value="@/css/Styles.css"/>
    </stylesheets>
    <!--<HBox>-->
    <TextArea fx:id="textArea" editable="false" promptText=" Смотри тут" wrapText="true" VBox.vgrow="ALWAYS"/>
    <!--</HBox>-->

    <!--<HBox fx:id="upperPanel" alignment="CENTER">-->
        <VBox fx:id="upperPanel">
            <TextField HBox.hgrow="ALWAYS" promptText="Login" fx:id="loginField" />
            <PasswordField promptText="Password" fx:id="passwordField" onAction="#tryToAuth"/>

        </VBox>
        <Button VBox.vgrow="ALWAYS" alignment="BASELINE_RIGHT" text="Authorized" onAction="#tryToAuth"
                textAlignment="CENTER"/>
    <!--</HBox>-->
    <HBox fx:id="buttonPanel" managed="false" visible="false">
        <TextField fx:id="textField" onAction="#sendMsg" promptText="      пиши тут" HBox.hgrow="ALWAYS"/>

        <Button fx:id="btn1" onAction="#sendMsg" text="Send"/>
    </HBox>

    <HBox alignment="TOP_CENTER">
        <Button fx:id="btnClose" onAction="#Close" text="Close"/>

    </HBox>

</VBox>
